{
    "parser": "@babel/eslint-parser",
    "env": {
        "es6": true,
        "browser": true
    },
    "extends": ["airbnb"],
    "rules": {
        "max-len": ["error", { "code": 150 }],
        "no-param-reassign": 0,
        "no-plusplus": "off",
        "max-classes-per-file": ["error", 7],
        "no-use-before-define": ["error", {
            "functions": true,
            "classes": false
        }],
        "no-console": "off",
        "import/extensions": 0,
        "import/no-unresolved": 0,
        "class-methods-use-this": 0
    }
}
